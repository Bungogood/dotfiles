[core]
    editor = /usr/bin/nano

[user]
    name = Bungogood
    email = github@bungogood.com

[color]
    branch = auto
    diff = auto
    status = auto

[color "branch"]
    current = red reverse
    local = blue
    remote = green

[color "diff"]
    meta = yellow
    frag = magenta
    old = red bold
    new = green
    plain = white

[color "status"]
    added = yellow
    changed = green
    untracked = cyan

[alias]
    branch = branch -ra
    pop = stash pop
    cm = commit -m
    ca = commit --amend

[credential]
    helper = manager
